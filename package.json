{
  "name": "next-pokedex",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --dir app --dir components --dir data --dir types --dir utils",
    "lint:fix": "next lint --fix --dir app --dir components --dir data --dir types --dir utils",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,mdx,css,scss}\"",
    "prepare": "husky install",
    "test": "concurrently \"npm run dev\" \"npx playwright test --project=chromium\""
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,md}": "prettier --write"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^6.4.7",
    "@mui/material": "^6.4.11",
    "@tanstack/react-query": "^5.71.10",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "graphql": "^16.10.0",
    "graphql-scalars": "^1.24.2",
    "graphql-yoga": "^5.13.2",
    "next": "15.2.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-spinners": "^0.15.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.51.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.2",
    "eslint": "^9.22.0",
    "eslint-config-next": "^15.2.2",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-unused-imports": "^0.1.3",
    "husky": "^8.0.0",
    "lint-staged": "^15.5.0",
    "prettier": "^3.4.3",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
